<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   app:cardBackgroundColor="@color/barinstaColorPaperLight"
                                                   style="?attr/materialCardViewElevatedStyle"
                                                   android:background="@drawable/background_lower_corner_border">

    <LinearLayout
            android:id="@+id/overall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="image"
                android:scaleType="centerCrop"
                android:background="@drawable/background_border"
                android:visibility="visible"/>

        <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textStyle="bold"
                android:lineSpacingExtra="5sp"
                android:textColor="@color/black"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/overlayFullDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/username"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>

            <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/username"
                    android:scaleType="centerCrop"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/profile_picture"
                    android:src="@drawable/verified_24px"
                    app:layout_constraintDimensionRatio="1:1"/>

            <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:text="@string/published_date"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/profile_picture"
                    android:layout_marginStart="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Like, View, Share Buttons -->
        <LinearLayout
                android:id="@+id/overlayImageDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/black"
                    android:textAppearance="?attr/textAppearanceBodyLarge"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/like_view_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                app:layout_constraintEnd_toStartOf="@id/bottom_navigation"
        >
            <ImageButton
                    android:id="@+id/like_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_keyboard_double_arrow_up_24"/>
            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/like_count"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:paddingEnd="12dp"
                    android:paddingStart="0dp"
                    android:text="0"/>
            <ImageButton
                    android:id="@+id/dislike_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_keyboard_double_arrow_down_24"/>
            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dislike_count"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:paddingEnd="12dp"
                    android:paddingStart="0dp"
                    android:text="0"/>

            <ImageButton
                    android:id="@+id/bookmarkButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_bookmark_24"/>
            <TextView
                    android:id="@+id/bookmark_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:paddingEnd="12dp"
                    android:paddingStart="0dp"
                    android:text="0"/>
            <ImageButton
                    android:id="@+id/shareIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_share_24"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>